{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@lynx-js/react",

    "module": "node18",
    "moduleResolution": "node16",

    "baseUrl": ".",
    "paths": {
      "sparkling-router": [
        "../node_modules/sparkling-router",
        "../../packages/methods/sparkling-router"
      ]
    },

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist/"],
}
